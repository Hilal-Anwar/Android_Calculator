<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.date.Add_and_Subtract_dates">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="Add and subtract dates"
                android:textColor="@color/colorAccent"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="From"
                android:textSize="18sp" />

            <Button
                android:id="@+id/date_3"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26dp"
                android:drawableRight="@drawable/icons8_calendar_26px"
                android:drawablePadding="@dimen/default_gap"
                android:textAllCaps="false"
                android:textSize="24sp" />

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="36dp"
                app:columnCount="3"
                app:rowCount="7">

                <RadioButton
                    android:id="@+id/radioButton_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Add"
                    app:layout_column="0"
                    app:layout_row="0" />

                <RadioButton
                    android:id="@+id/radioButton_subtract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subtract"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Space
                    android:layout_width="83dp"
                    android:layout_height="25dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Years"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_gravity="center"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Months"
                    android:textSize="18sp"
                    app:layout_column="1"
                    app:layout_gravity="center"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Days"
                    android:textSize="18sp"
                    app:layout_column="2"
                    app:layout_gravity="center"
                    app:layout_row="2" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:layout_column="0"
                    app:layout_row="3" />

                <Spinner
                    android:id="@+id/year"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_column="0"
                    app:layout_gravity="center"
                    app:layout_row="4" />

                <Spinner
                    android:id="@+id/month"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_column="1"
                    app:layout_gravity="center"
                    app:layout_row="4" />

                <Spinner
                    android:id="@+id/days"
                    style="@style/Widget.AppCompat.Spinner.Underlined"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_column="2"
                    app:layout_gravity="center"
                    app:layout_row="4" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    app:layout_column="0"
                    app:layout_row="5" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="18sp"
                    app:layout_column="0"
                    app:layout_row="6" />

            </androidx.gridlayout.widget.GridLayout>

            <TextView
                android:id="@+id/final_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="24sp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>