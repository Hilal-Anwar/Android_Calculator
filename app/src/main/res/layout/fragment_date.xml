<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.date.DataFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Difference of dates"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/date_1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icons8_calendar_26px"
            android:drawablePadding="@dimen/default_gap"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="2" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:id="@+id/date_2"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icons8_calendar_26px"
            android:drawablePadding="@dimen/default_gap"
            android:textAllCaps="false"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difference"
            android:textSize="18sp"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/differece_between_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Same date"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            app:layout_column="0"
            app:layout_row="8" />

        <TextView
            android:id="@+id/total_no_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="9" />


    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>